@model BigSchool.ViewModels.CouseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Courses"))
{
    @Html.AntiForgeryToken()
    <form>
        <div class="from-group">
            @Html.LabelFor(m => m.Place)
            @Html.TextBoxFor(m => m.Place, new { @class = "from-control" })
            @Html.ValidationMessageFor(m => m.Place)
        </div>
        <div class=" form-group">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, new { @class = "from-control" })
            @Html.ValidationMessageFor(m => m.Date)

        </div>
        <div class=" from-group">
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "from-control" })
            @Html.ValidationMessageFor(m => m.Time)

        </div>
        <div class=" from-group">
            @Html.LabelFor(m => m.Category)
            @Html.DropDownListFor(m => m.Category,
          new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Category)
        </div>
        <div class=" from-group">
            <button type="submit" value="Save" class="btn btn-primary">Save</button>
        </div>
        <div class=" from-group"></div>
    </form>
}
    @section scripts
{
        @Scripts.Render("~/bundles/jqueryval");
    }
